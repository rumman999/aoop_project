<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aoop_project.LofiMusicController"
      alignment="CENTER"
      spacing="25"
      style="-fx-background-color: #10231c"
      prefWidth="420" prefHeight="350">

    <!-- Padding -->
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Title -->
    <Label text="🎵 Lofi Music Player 🎵"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Current Song Label -->
    <Label fx:id="songLabel"
           text="Now Playing: "
           style="-fx-font-size: 15px; -fx-text-fill: #4ef5c6;"/>

    <!-- Control Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="prevBtn" text="⏮ Prev" onAction="#handlePrev"
                style="-fx-background-color: #e67e22; -fx-text-fill: black; -fx-font-weight: bold;
                       -fx-background-radius: 10; -fx-padding: 8 16;" />
        <Button fx:id="playPauseBtn" text="▶ Play" onAction="#handlePlayPause"
                style="-fx-background-color: #34d399; -fx-text-fill: black; -fx-font-weight: bold;
                       -fx-background-radius: 10; -fx-padding: 8 20;" />
        <Button fx:id="nextBtn" text="Next ⏭" onAction="#handleNext"
                style="-fx-background-color: #e67e22; -fx-text-fill: black; -fx-font-weight: bold;
                       -fx-background-radius: 10; -fx-padding: 8 16;" />
    </HBox>

</VBox>