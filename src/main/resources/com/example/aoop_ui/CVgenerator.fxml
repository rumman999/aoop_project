<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<ScrollPane xmlns="http://javafx.com/javafx/21.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.aoop"
            fitToWidth="true"
            fitToHeight="false"
            style="-fx-background-color: transparent;">

    <VBox spacing="25"
          style="-fx-background-color:linear-gradient(to bottom right,#e8f2ff,#f8fbff);-fx-border-radius:18;-fx-background-radius:18;">

        <padding>
            <Insets top="35" right="45" bottom="35" left="45"/>
        </padding>

        <children>
            <!-- Title Section -->
            <VBox spacing="8" alignment="CENTER">
                <Text text="Professional CV Builder" style="-fx-font-size:38px;-fx-font-weight:bold;-fx-fill:#1e3a5f;">
                    <font>
                        <Font name="Segoe UI Semibold" size="38"/>
                    </font>
                </Text>
                <Text text="Create your perfect resume in minutes" style="-fx-font-size:16px;-fx-fill:#4a6b85;"/>
            </VBox>

            <Separator style="-fx-background-color:#c1d5e8;"/>

            <!-- Personal Information Section -->
            <VBox spacing="18">
                <Label text="Personal Information" style="-fx-font-size:20px;-fx-font-weight:bold;-fx-text-fill:#2c5282;"/>

                <GridPane hgap="20" vgap="15" maxWidth="Infinity"
                          style="-fx-background-color:#ffffff;-fx-background-radius:16;-fx-padding:28;-fx-effect:dropshadow(gaussian,#d4e2f0,12,0,0,4);">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <!-- Row 0: Full Name -->
                    <Label text="Full Name *" GridPane.rowIndex="0" GridPane.columnIndex="0"
                           style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;"/>
                    <TextField fx:id="fullNameField" promptText="John Doe"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"
                               style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;"/>

                    <!-- Row 1: Job Title -->
                    <Label text="Job Title *" GridPane.rowIndex="1" GridPane.columnIndex="0"
                           style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;"/>
                    <TextField fx:id="jobTitleField" promptText="Software Engineer"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"
                               style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;"/>

                    <!-- Row 2: Email -->
                    <Label text="Email Address *" GridPane.rowIndex="2" GridPane.columnIndex="0"
                           style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;"/>
                    <TextField fx:id="emailField" promptText="john.doe@email.com"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"
                               style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;"/>

                    <!-- Row 3: Phone -->
                    <Label text="Phone Number" GridPane.rowIndex="3" GridPane.columnIndex="0"
                           style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;"/>
                    <TextField fx:id="phoneField" promptText="+1 (555) 123-4567"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"
                               style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;"/>

                    <!-- Row 4: Location -->
                    <Label text="Location" GridPane.rowIndex="4" GridPane.columnIndex="0"
                           style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;"/>
                    <TextField fx:id="locationField" promptText="New York, NY"
                               GridPane.rowIndex="4" GridPane.columnIndex="1"
                               style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;"/>

                    <!-- Row 5: LinkedIn -->
                    <Label text="LinkedIn Profile" GridPane.rowIndex="5" GridPane.columnIndex="0"
                           style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;"/>
                    <TextField fx:id="linkedinField" promptText="https://linkedin.com/in/johndoe"
                               GridPane.rowIndex="5" GridPane.columnIndex="1"
                               style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;"/>
                </GridPane>
            </VBox>

            <!-- Professional Summary Section -->
            <VBox spacing="15">
                <Label text="Professional Summary" style="-fx-font-size:20px;-fx-font-weight:bold;-fx-text-fill:#2c5282;"/>
                <TextArea fx:id="summaryArea" promptText="Write a compelling 2-3 sentence summary highlighting your key achievements and career goals..."
                          prefRowCount="4" wrapText="true"
                          style="-fx-background-color:#ffffff;-fx-border-color:#cbd5e0;-fx-border-radius:12;-fx-background-radius:12;-fx-font-size:15px;-fx-padding:15;"/>
            </VBox>

            <!-- Skills Section -->
            <VBox spacing="15">
                <Label text="Technical Skills" style="-fx-font-size:20px;-fx-font-weight:bold;-fx-text-fill:#2c5282;"/>
                <TextField fx:id="skillsField" promptText="Java, Python, React, Node.js, SQL, AWS..."
                           style="-fx-background-color:#ffffff;-fx-border-color:#cbd5e0;-fx-border-radius:12;-fx-background-radius:12;-fx-font-size:15px;-fx-padding:12;"/>
            </VBox>

            <!-- Work Experience Section -->
            <VBox spacing="15">
                <Label text="Work Experience" style="-fx-font-size:20px;-fx-font-weight:bold;-fx-text-fill:#2c5282;"/>
                <TextArea fx:id="experienceArea"
                          promptText="Software Engineer | ABC Company | 2020-Present&#10;• Developed scalable web applications using React and Node.js&#10;• Improved system performance by 40%&#10;&#10;Junior Developer | XYZ Corp | 2018-2020&#10;• Built responsive user interfaces&#10;• Collaborated with cross-functional teams"
                          prefRowCount="6" wrapText="true"
                          style="-fx-background-color:#ffffff;-fx-border-color:#cbd5e0;-fx-border-radius:12;-fx-background-radius:12;-fx-font-size:15px;-fx-padding:15;"/>
            </VBox>

            <!-- Education Section -->
            <VBox spacing="15">
                <Label text="Education" style="-fx-font-size:20px;-fx-font-weight:bold;-fx-text-fill:#2c5282;"/>
                <TextArea fx:id="educationArea"
                          promptText="Bachelor of Computer Science | University Name | 2018&#10;GPA: 3.8/4.0&#10;Relevant Coursework: Data Structures, Algorithms, Database Systems"
                          prefRowCount="3" wrapText="true"
                          style="-fx-background-color:#ffffff;-fx-border-color:#cbd5e0;-fx-border-radius:12;-fx-background-radius:12;-fx-font-size:15px;-fx-padding:15;"/>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="25" alignment="CENTER">
                <padding>
                    <Insets top="10" bottom="20"/>
                </padding>
                <Button text="🗂️ Generate Professional CV" onAction="#Submit"
                        style="-fx-background-color:linear-gradient(to right,#3182ce,#2b77cb);-fx-text-fill:white;-fx-font-size:17px;-fx-background-radius:14;-fx-padding:12 28 12 28;-fx-font-weight:bold;-fx-cursor:hand;"/>
                <Button text="🔄 Clear All Fields" onAction="#Reset"
                        style="-fx-background-color:transparent;-fx-border-color:#3182ce;-fx-border-width:2;-fx-text-fill:#3182ce;-fx-font-size:17px;-fx-border-radius:14;-fx-padding:12 28 12 28;-fx-cursor:hand;"/>
            </HBox>
        </children>
    </VBox>
</ScrollPane>
